{
  "mcpServers": {
    "vizpilot": {
      "command": "python",
      "args": [
        "-m",
        "mcp_server.server"
      ],
      "env": {
        "VIZPILOT_API_KEY": "your_api_key_here",
        "DJANGO_SETTINGS_MODULE": "vizpilot_config.settings",
        "DATABASE_URL": "postgresql://vizpilot:vizpilot123@localhost:5432/vizpilot_db",
        "REDIS_URL": "redis://localhost:6379/0",
        "MCP_SERVER_NAME": "vizpilot-mcp",
        "MCP_LOG_LEVEL": "INFO"
      },
      "cwd": "/path/to/NEXA",
      "description": "VIZPILOT Protocol Server - Access development protocols and steering rules",
      "autoStart": true
    }
  }
}
